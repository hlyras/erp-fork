<form id="receipt-filter-form" class="box b2-3 container border-st radius-5 padding-5 margin-top-5 h-center">
  <div class="box b1 underline lucida-grande bold margin-top-5 center">Filtrar Recebimentos</div>
  <div class="mobile-box b2 container padding-5 margin-top-5 h-center">
    <input type="radio" name="location" value="Interna" class="mobile-box b9 margin-top-2 center"
      onclick="setFilterLocation(this);" checked="checked">
    <label for="Interna" class="mobile-box">Interna</label>
  </div>
  <div class="mobile-box b2 container padding-5 margin-top-5 h-center">
    <input type="radio" name="location" value="Externa" class="mobile-box b9 margin-top-2 center"
      onclick="setFilterLocation(this);">
    <label for="Externa" class="mobile-box">Externa</label>
  </div>

  <select id="internal-seamstress-select" name="internal_seamstress_id" class="box b2-9 input-generic margin-top-5">
    <option value="">Todos os colaboradores</option>
    <% for(let i in internal_seamstresses) { %>
    <option value="<%= internal_seamstresses[i].id %>"><%= internal_seamstresses[i].name %></option>
    <% } %>
  </select>

  <select id="external-seamstress-select" name="external_seamstress_id" class="box b2-9 input-generic margin-top-5"
    style="display:none;">
    <option value="">Todas as fações</option>
    <% for(let i in external_seamstresses) { %>
    <option value="<%= external_seamstresses[i].id %>"><%= external_seamstresses[i].name %></option>
    <% } %>
  </select>

  <select name="status" class="box b2-9 input-generic center margin-top-5">
    <option value="">Todos os status</option>
    <option value="Ag. contagem">Ag. contagem</option>
    <option value="Em conferência">Em conferência</option>
    <option value="Ag. armazenamento">Ag. armazenamento</option>
  </select>

  <input type="text" name="production_id" class="box b2-9 input-generic border radius-5 margin-top-5 center"
    placeholder="Id da produção">

  <input type="text" name="seal" class="box b3 input-generic border radius-5 margin-top-5 center" placeholder="Lacre">

  <input type="datetime-local" name="periodStart" class="box b3 input-generic center margin-top-5">
  <input type="datetime-local" name="periodEnd" class="box b3 input-generic center margin-top-5">

  <input type="submit" name="submit" class="box b3 submit-generic lucida-grande bold shadow-lg-st margin-top-5 pointer"
    value="Filtrar">
</form>