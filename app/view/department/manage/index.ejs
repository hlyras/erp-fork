				<input type="text" name="name" class="box b3-5 lucida-grande bold input-generic margin-top-5 center" placeholder="Nome do departamento" autocomplete="off">
				<input type="text" name="code" class="box b5 lucida-grande bold input-generic margin-top-5 center" placeholder="Código" autocomplete="off">
				<input type="submit" name="submit" value="Filtrar" class="box b5 lucida-grande bold submit-generic margin-top-5 center pointer">
			</form>

			<div id="department-filter-box" class="box b1 container" style="display:none;">
				<div id="department-filter-div" class="box b1 container"></div>
				<%- include('./../../partials/carousel.ejs') %>
			</div>
		</div>

