<html>
	<head>
        <% include ./../partials/head %>
	</head>
	<body>
		<% include ./../partials/header %>
        <% include ./../partials/nav %>
		<section class="container">
			<div class="box b2 container ground border padding-10 margin-top-10">
				<form id="department-create-form" class="box b1 container">
					<div class="box b1 lucida-grande bold underline center">Cadastrar Novo Departamento</div>
					<input type="hidden" name="id">
					<input type="text" name="name" class="box b3-5 lucida-grande bold input-generic margin-top-5 center" placeholder="Nome do departamento" autocomplete="off">
					<input type="text" name="code" class="box b5 lucida-grande bold input-generic margin-top-5 center" placeholder="Código" autocomplete="off">
					<input type="submit" name="submit" value="Cadastrar" class="box b5 lucida-grande bold submit-generic margin-top-5 center pointer">
				</form>

				<div class="box b1 container padding-10 margin-top-10">
					<div class="mobile-box b11-12 lucida-grande bold underline center">Filtrar Departamentos</div>
					<div class="mobile-box b12 container center"><img src="/images/icon/down-arrow.png" class="noselect size-25 center icon transition-02-02 pointer" onclick="lib.displayDiv('department-filter-box', this, '/images/icon/down-arrow.png', '/images/icon/up-arrow.png')"></div>

					<div id="department-filter-box" class="box b1 container ground border padding-10 margin-top-10" style="display:none;">
						<form id="department-filter-form" class="box b1 container">
							<input type="text" name="name" class="box b3-5 lucida-grande bold input-generic margin-top-5 center" placeholder="Nome do departamento" autocomplete="off">
							<input type="text" name="code" class="box b5 lucida-grande bold input-generic margin-top-5 center" placeholder="Código" autocomplete="off">
							<input type="submit" name="submit" value="Filtrar" class="box b5 lucida-grande bold submit-generic margin-top-5 center pointer">
						</form>
		                <div id="department-filter-div" class="box b1 ground avant-garde margin-top-10"></div>
		                <% include ./../partials/carousel %>
		            </div>
				</div>
			</div>
		</section>
		<% include ./../partials/loader %>
	</body>
	<footer>
        <% include ./../partials/footer %>
        <% include ./partial %>
	</footer>
</html>