<details class="box b1 container border-st radius-5 padding-10 margin-top-10">
  <summary class="lucida-grande bold pointer">Adicionar pacote ao cat√°logo</summary>
  <div class="box b1 container margin-top-5">
    <div id="package-dropdown-box" class="mobile-box b7-10 container dropdown ground">
      <ul class="box a1 container">
        <li>
          <input type="text" id="package-dropdown-input" data-id=""
            class="mobile-box a1 input-generic lucida-grande bold center" oninput="packageDropdown(this)"
            placeholder="Nome do pacote"
            onclick="if(this.readOnly){this.value='';this.dataset.id='';this.readOnly = false;}" role="presentation"
            autocomplete="off">
          <ul id="package-dropdown-ul" class="box b1"></ul>
        </li>
      </ul>
    </div>

    <input type="number" id="package-price-input" class="mobile-box b5 input-generic lucida-grande bold center" step="1"
      value="0" onfocus="if(this.value < 1){this.value = ''}" onblur="if(this.value < 1){this.value = 0}" />

    <div onclick="packageAdd()" class="mobile-box b10 center"><img class='size-25 icon center'
        src="/images/icon/increase.png"></div>
  </div>
</details>