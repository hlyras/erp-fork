<form id="package-create-form" class="box b2 container ground border radius-5 padding-10 margin-top-10">
  <div class="box b1 underline lucida-grande bold center">Novo pacote</div>
  <input type="hidden" name="id" value="">
  <input type="number" name="code" class="box b4 input-generic margin-top-5 center" placeholder="Código" min="1" max="999999" autocomplete="off">
  <input type="text" name="name" class="box b3-4 input-generic center margin-top-5" placeholder="Nome do pacote" autocomplete="off" maxlength="75">
  <select name="color" class="box b2 input-generic margin-top-5 center" autocomplete="off">
    <option value="">Cor</option>
    <% for(i in colors){ %>
    <option value="<%= colors[i].shortcut %>"><%= colors[i].name %></option>
    <% } %>
  </select>
  <select name="brand" class="box b2 input-generic margin-top-5 center hide-disabled" autocomplete="off">
    <option value="" selected disabled="">Marca do Produto</option>
    <option value="Sem marca">Sem marca</option>
    <option value="J.A Rio Militar">J.A Rio Militar</option>
  </select>
  <input type="number" name="weight" class="box b3 input-generic center margin-top-5" step="1" min="1" max="99999" placeholder="Peso em gramas" onfocus="if(this.value < 1){this.value=''}" onblur="if(this.value < 1){this.value=''}" autocomplete="off" maxlength="6" />
  <select name="status" class="box b2-3 input-generic margin-top-5 center hide-disabled" autocomplete="off">
    <option value="" selected disabled="">Status do pacote</option>
    <option value="Indisponível">Indisponível</option>
    <option value="Disponível">Disponível</option>
  </select>
  <input type="text" name="image" class="box b1 input-generic center margin-top-5" placeholder="Imagem do pacote" autocomplete="off">
  <input type="text" name="announcement" class="box b1 input-generic center margin-top-5" placeholder="Link do anúncio" autocomplete="off">
  
  <%- include('./../image/box.ejs') %>
  <%- include('./../image/upload-box.ejs') %>

  <textarea name="description" class="box b1 height-80 avant-garde padding-5 margin-top-5" placeholder="Descrição do Pacote"></textarea>
  <input type="submit" name="submit" class="box b1 submit-generic center margin-top-5 bold" value="cadastrar">
</form>