<script>
	async function productDetail (product_id) {
		let product = await API.response(Product.findById, product_id);
		if(!product){ return false };

		lib.display("product-image-box", "");
		lib.display("product-detail-box", "");

		let detail_div = document.getElementById("product-detail-div");
		detail_div.innerHTML = "";

		detail_div.append(lib.element.create("div", { class: "box b1 underline center bold", }, product.name))
		detail_div.append(lib.element.info("b6", "Id", product.id));
		detail_div.append(lib.element.info("b6", "Código", product.code));
		detail_div.append(lib.element.info("b2", "Nome", product.name));
		detail_div.append(lib.element.icon("b6", 25, "/images/icon/add-image.png", `imageAdd('${product.id}')`));
		detail_div.append(lib.element.info("b8", "Tamanho", product.size));
		detail_div.append(lib.element.info("b4", "Cor", product.color));
		detail_div.append(lib.element.info("b3-8", "Marca", product.brand));
		detail_div.append(lib.element.info("b4", "Peso", `${product.weight}g`));
		detail_div.append(lib.element.info("b1 pre-wrap", "Descrição", `${product.description}`));

		const pagination = { pageSize: 1, page: 0 };
		(function(){ lib.carousel.execute("product-image-box", imageRender, product.images, pagination); }());
	};
</script>