<form id="product-create-form" class="box b2 container ground border radius-5 padding-10 margin-top-10">
	<div class="box b1 underline center">Novo Produto</div>
	<input type="hidden" name="id" value="0" autocomplete="off">
	<input type="number" name="code" class="box b4 input-generic margin-top-5 center" placeholder="Código" min="1" max="99999" autocomplete="off">
	<input type="text" name="name" class="box b3-4 input-generic margin-top-5 center" placeholder="Nome do produto" autocomplete="off" maxlength="75">
	<select name="color" class="box b3 input-generic margin-top-5 center" autocomplete="off">
		<option value="">Cor</option>
		<% for(i in productColors){ %>
		<option value="<%= productColors[i].shortcut %>"><%= productColors[i].name %></option>
		<% } %>
	</select>
	<select name="size" class="box b3 input-generic margin-top-5 center" autocomplete="off">
		<option value="">Tamanho</option>
		<option value="ST">Sem tamanho</option>
		<option value="PP">PP</option>
		<option value="P">P</option>
		<option value="M">M</option>
		<option value="XM">XM</option>
		<option value="G">G</option>
		<option value="XG">XG</option>
		<option value="GG">GG</option>
		<option value="XGG">XGG</option>
		<option value="XXG">XXG</option>
		<option value="XXGG">XXGG</option>
	</select>
	<input type="number" name="weight" class="box b3 input-generic center margin-top-5 bold" step="1" placeholder="Peso em gramas" onfocus="if(this.value < 1){this.value=''}" onblur="if(this.value < 1){this.value=''}" autocomplete="off" />
	<select name="brand" class="box b2 input-generic margin-top-5 center" autocomplete="off">
		<option value="">Marca do Produto</option>
		<option value="Sem marca">Sem marca</option>
		<option value="J.A Rio Militar">J.A Rio Militar</option>
	</select>
	<select name="status" class="box b2 input-generic margin-top-5 center" autocomplete="off">
		<option value="">Status</option>
		<option value="Disponível">Disponível</option>
		<option value="Indisponível">Indisponível</option>
	</select>
	<input type="text" name="image" class="box b2 input-generic margin-top-5 center" placeholder="Imagem do produto" autocomplete="off" maxlength="200">
	<input type="text" name="announcement" class="box b2 input-generic margin-top-5 center" placeholder="Link do anúncio" autocomplete="off" maxlength="200">

	<%- include('./image-box.ejs') %>
	<%- include('./image-upload-box.ejs') %>

	<input type="text" name="video" class="box b1 input-generic margin-top-5 center" placeholder="Vídeo do produto" autocomplete="off" maxlength="200">
	<textarea name="description" class="box b1 height-80 avant-garde padding-5 margin-top-5" placeholder="Descrição do Produto"></textarea>
	<input type="submit" name="submit" class="box b1 submit-generic center box-hover margin-top-5 bold" value="Cadastrar">
</form>