<form id="outcome-create-form" class="box b2 container ground border-st radius-5 padding-5 margin-top-5">
  <div class="box b1 underline lucida-grande em11 bold center">Nova despesa</div>

  <input type="hidden" name="id" value="">

  <div class="box b1 container margin-top-5">
    <div class="box b1 em08 lucida-grande bold">Data de vencimento</div>
    <input type="date" name="payment_date" class="box b1 georgia border-st padding-10 center">
  </div>

  <div class="box b3 container margin-top-5">
    <div class="box b1 em08 lucida-grande bold">Categoria</div>
    <select name="category_id" class="box b1 border-st padding-9 hide-disabled center">
      <option value="">Categoria</option>
      <% for(i in outcomeCategories){ %>
      <option value="<%= outcomeCategories[i].id %>"><%= outcomeCategories[i].name %></option>
      <% } %>
    </select>
  </div>

  <div class="box b3 container margin-top-5">
    <div class="box b1 em08 lucida-grande bold">Origem</div>
    <select name="origin_id" class="box b1 border-st padding-9 hide-disabled center">
      <option value="">Origem</option>
    </select>
  </div>

  <div class="box b3 container margin-top-5">
    <div class="box b1 em08 lucida-grande bold">Valor do pagamento</div>
    <input type="number" name="value" class="box b1 border-st padding-10 center bold" step="0.01" value="0.00"
      onfocus="if(this.value < 0.01){this.value=''}"
      onblur="if(this.value < 0.01){this.value=parseFloat(0).toFixed(2)}" />
  </div>

  <div class="box b1 container margin-top-5">
    <div class="box b1 em08 lucida-grande bold">Descrição da despesa</div>
    <textarea name="description" class="box b1 height-80 avant-garde padding-5" placeholder="Descrição"></textarea>
  </div>

  <input type="hidden" name="payment_method" value="">
  <%- include('./payment/method.ejs') %>

  <input type="submit" name="submit"
    class="box b1 submit-generic lucida-grande em11 bold noborder radius-5 margin-top-5 center pointer"
    value="Cadastrar">
</form>