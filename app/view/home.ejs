<html>
<head>
<% include ./partials/head %>
</head>
<body>
  <% include ./partials/header %>
  <% include ./partials/nav %>
  <section class="container">
    <form id="product-filter-form" class="box b1 container ground border radius-5 padding-10">
      <input type="hidden" name="brand">
      <input type="number" name="code" class="box b4 input-generic margin-top-5 center" placeholder="CÃ³d" autocomplete="off">
      <input type="text" name="name" class="box b4 input-generic margin-top-5 center" placeholder="Nome" autocomplete="off">
      <select name="color" class="box b4 input-generic margin-top-5 center" autocomplete="off">
        <option value="">Cor</option>
        <% for(i in productColors){ %>
          <option value="<%= productColors[i].shortcut %>"><%= productColors[i].name %></option>
        <% } %>
      </select>
      <input type="submit" name="submit" class="box b4 submit-generic center box-hover margin-top-5 bold" value="Filtrar">
    </form>

    <div id="product-filter-box" class="box b1 container" style="display:none">
      <div id="product-filter-div" class="box b1 container"></div>
      <% include ./partials/carousel %>
    </div>
  </section>
  <% include ./partials/loader %>
</body>
<footer>
  <% include ./partials/footer %>
  <script src="/javascripts/scripts/product/model/main.js"></script>
  <script src="/javascripts/scripts/product/controller/main.js"></script>
  <script src="/javascripts/scripts/product/view/main.js"></script>
  <script type="text/javascript">
  function print() { openPrintWindow('/product/print','to_print','width=700,height=400,_blank'); };
  </script>
</footer>
</html>