<form id="prospect-create-form" class="box b4 container ground border radius-5 padding-5 margin-top-5">
  <div class="box b1 underline lucida-grande bold center">Cadastrar cliente</div>
  <input type="text" name="brand" class="mobile-box b1 input-generic margin-top-5 center" placeholder="Nome da Empresa"
    role="presentation" autocomplete="off" required>
  <select name="state" class="mobile-box b1 input-generic margin-top-5 hide-disabled">
    <option disabled selected value="">Estado</option>
  </select>

  <select name="city" class="mobile-box b1 input-generic margin-top-5 hide-disabled">
    <option disabled selected value="">Cidade</option>
  </select>

  <input type="text" name="phone" oninput="lib.mask.phone(this)" class="box b1 input-generic margin-top-5 center"
    placeholder="Telefone" role="presentation" autocomplete="off" maxlength="15" required>
  <input type="text" name="social-media" class="box b1 input-generic margin-top-5 center" placeholder="Rede Social"
    role="presentation" autocomplete="off">
  <input type="text" name="product-approach" class="box b1 input-generic margin-top-5 center"
    placeholder="Produto de Abordagem" role="presentation" autocomplete="off">
  <input type="submit" name="submit" class="box b1 submit-generic margin-top-5 center" value="Cadastrar">
</form>