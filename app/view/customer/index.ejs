<html>
    <head>
        <% include ./../partials/head %>
    </head>
    <body>
        <% include ./../partials/header %>
        <% include ./../partials/nav %>
        <section>
            <div class="container">
                <div class="box two container ground padding-10 margin-top-10">
                    <h3 class="box one ground underline padding-10 center">Novo Cliente</h3>
                    <div class="mobile-box two center margin-top-10">
                        <input type="radio" name="customer-type" value="legal-entity" onclick="switchPersonType(this);" checked="checked">
                        <label for="legal-entity">Pessoa Jurídica</label><br>
                    </div>
                    <div class="mobile-box two center margin-top-10">
                        <input type="radio" name="customer-type" value="natural-person" onclick="switchPersonType(this);">
                        <label for="natural-person">Pessoa Física</label>
                    </div>
                    <form id="customer-create-form" class="container box one box-border padding-10 margin-top-5">
                        <input type="hidden" name="id" value="">
                        <input type="hidden" name="type" value="legal-entity">
                        <input type="text" name="name" class="box one input-generic center ground margin-top-5" placeholder="Nome do Responsável" maxlength="100" autocomplete="off">
                        <div id="legal-entity-form" class="container">
                            <input type="text" name="trademark" class="box two input-generic center ground margin-top-5" placeholder="Razão Social" maxlength="100" autocomplete="off">
                            <input type="text" name="brand" class="box two input-generic center ground margin-top-5" placeholder="Nome Fantasia" maxlength="100" autocomplete="off">
                            <input type="number" name="cnpj" class="box two input-generic center ground margin-top-5" placeholder="CNPJ" autocomplete="off">
                            <input type="text" name="ie" class="box two input-generic center ground margin-top-5" placeholder="Inscrição Estadual" maxlength="9" autocomplete="off">
                        </div>
                        <div id="natural-person-form" class="box two container" style="display:none">
                            <input type="number" name="cpf" class="box one input-generic center ground margin-top-5" placeholder="CPF" autocomplete="off">
                        </div>
                        <input type="text" name="social-media" class="box two input-generic center ground margin-top-5" placeholder="Rede social (url)" maxlength="100" autocomplete="off">
                        <input type="text" name="email" class="box two input-generic center ground margin-top-5" placeholder="E-mail" maxlength="100" autocomplete="off">
                        <input type="text" name="phone" class="box two input-generic center ground margin-top-5" placeholder="Telefone" maxlength="12" autocomplete="off">
                        <input type="text" name="cellphone" class="box two input-generic center ground margin-top-5" placeholder="Celular" maxlength="13" autocomplete="off">
                        <input type="submit" name="submit" class="box one submit-generic center box-hover margin-top-5 bold" value="Cadastrar">
                    </form>

                    <script>
                        function switchPersonType(input){
                            if(input.value == "legal-entity"){
                                document.getElementById("natural-person-form").style.display = "none";
                                document.getElementById("legal-entity-form").style.display = "";
                                document.getElementById("customer-create-form").elements.namedItem("type").value = "legal-entity";
                            } else if(input.value == "natural-person"){
                                document.getElementById("legal-entity-form").style.display = "none";
                                document.getElementById("natural-person-form").style.display = "";
                                document.getElementById("customer-create-form").elements.namedItem("type").value = "natural-person";
                            };
                        };
                    </script>
                </div>
                <div id="customer-adress-create-box" class="box two container ground padding-10 margin-top-10">
                    
                </div>
                <div id="customer-filter-box" class="box two ground padding-10 margin-top-10">
                    <h3 class="box one ground padding-10 center box-border">Buscar Cliente</h3>
                    <form id="customer-filter-form" class="container box one box-border padding-10 margin-top-5">
                        <input type="text" name="name" class="box three input-generic center ground margin-top-5" placeholder="Nome" autocomplete="off">
                        <input type="text" name="cnpj" class="box three input-generic center ground margin-top-5" placeholder="CNPJ" maxlength="14" autocomplete="off">
                        <input type="submit" name="submit" class="box three submit-generic center box-hover bold margin-top-5" value="Buscar">
                    </form>
                    <table id="customer-filter-table" class="box one ground padding-10 margin-top-10 tbl-info"></table>
                    <% include ./../partials/carousel %>
                </div>
                <div id="customer-show-box" class="box two container ground padding-10 margin-top-10" style="display:none"></div>
            </div>
        </section>
        <% include ./../partials/loader %>
    </body>
    <footer>
        <% include ./../partials/footer %>
        <% include ./partial %>
    </footer>
</html>