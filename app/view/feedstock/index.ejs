<html>
	<head>
        <% include ./../partials/head %>
	</head>
	<body>
		<header>
			<div onclick="window.location.href='/'" href="#default" class="favicon"><img class="image" src="/images/favicon.png"></div>
			<div class="right">
				<% if (user.access == 'adm') { %>
	            	<a class="active" href="/admin">Admin</a>
	            <% } %>
				<a onclick="let r = confirm('deseja sair?');if(r==true){window.location.href='/logout'}">Sair</a>
			</div>
		</header>
        <% include ./../partials/nav %>
		<section>
			<div class="container">
				<div class="box-1">
                    <h3 class="underline">Relat√≥rio de Compras</h3>
                    <!-- <h1 id="income_totalValue"></h1> -->
					<form id="feedstock-purchase-filter-form" class="box-1">
						<input type="date" class="btn-generic-big" name="feedstock_purchase_periodStart">
						<input type="date" class="btn-generic-big" name="feedstock_purchase_periodEnd">
						<select class="btn-generic-big" name="feedstock_purchase_status">
							<option value="Pedido solicitado">Pedidos solicitados</option>
							<option value="Pedido confirmado">Pedidos confirmados</option>
						</select>
						<input type="submit" class="btn-submit" id="feedstock-purchase-filter-form-submit" value="Filtrar">
					</form>
					<div id="feedstock-purchase-div">
						<table class="tbl-info box-1" id="feedstock-purchase-tbl"></table>
						<br>
						<button id="feedstockPurchasePrevious" autocomplete="off" disabled>&lsaquo;&lsaquo;</button>
	                    <span id="feedstockPurchasePageNumber"></span>
	                    <button id="feedstockPurchaseNext" autocomplete="off" disabled>&rsaquo;&rsaquo;</button><br><br>
					</div>
				</div>
			</div>
		</section>
		<div id="ajax-loader" class="ajax-loader">
			<div class="loader"></div>
		</div>
	</body>
	<footer>
        <% include ./../partials/footer %>
        <% include ./partial %>
		<script src="/javascripts/scripts/feedstock/report.js"></script>
        <script>
        	//fill date inputs
        	lib.fillDateInput(document.getElementById("feedstock-purchase-filter-form").elements.namedItem('feedstock_purchase_periodStart'));
        	lib.fillDateInput(document.getElementById("feedstock-purchase-filter-form").elements.namedItem('feedstock_purchase_periodEnd'));
        </script>
	</footer>
</html>