<html>
	<head>
        <% include ./../partials/head %>
	</head>
	<body>
		<header>
			<div onclick="window.location.href='/'" href="#default" class="favicon"><img class="image" src="/images/favicon.png"></div>
			<div class="right">
				<% if (user.access == 'adm') { %>
	            	<a class="active" href="/admin">Admin</a>
	            <% } %>
				<a onclick="let r = confirm('deseja sair?');if(r==true){window.location.href='/logout'}">Sair</a>
			</div>
		</header>
        <% include ./../partials/nav %>
		<section>
			<div class="container">
				<div class="box-1">
					<h3 class="underline">Controle de estoque</h3>
				</div>
				<div class="box-2">
					<h3 class="underline">Entrada</h3>
					<form id="feedstock-purchase-filter-form" class="box-1">
						<input type="hidden" name="location" value="feedstockPurchaseStorage">
						<input type="date" class="btn-generic-big" name="feedstock_purchase_periodStart">
						<input type="date" class="btn-generic-big" name="feedstock_purchase_periodEnd">
						<select class="btn-generic-medium" name="feedstock_purchase_status">
							<option value="Pedido solicitado">Pedidos solicitados</option>
							<option value="Pedido confirmado">Pedidos confirmados</option>
						</select>
						<input type="submit" class="btn-submit" id="feedstock-purchase-filter-form-submit" value="Filtrar">
					</form>
					<div id="feedstock-purchase-filter-div">
						<table class="tbl-info box-1" id="feedstock-purchase-filter-tbl"></table>
						<br>
						<button id="feedstockPurchaseStoragePrevious" autocomplete="off" disabled>&lsaquo;&lsaquo;</button>
	                    <span id="feedstockPurchaseStoragePageNumber"></span>
	                    <button id="feedstockPurchaseStorageNext" autocomplete="off" disabled>&rsaquo;&rsaquo;</button><br><br>
					</div>
				</div>
				<div class="box-2">
					<h3 class="underline">Saída</h3>
					
				</div>
				<div id="feedstock-purchase-show-box" class="box-1" style="display:none">
					<h3 class="underline" id="feedstock-purchase-show-info"></h3>
					<table class="tbl-info box-1" id="feedstock-purchase-show-tbl"></table>
					<h3 class="underline">Matérias-Primas</h3>
					<table class="tbl-info box-1" id="feedstock-purchase-product-show-tbl"></table>
				</div>
			</div>
		</section>
		<div id="ajax-loader" class="ajax-loader">
			<div class="loader"></div>
		</div>
	</body>
	<footer>
        <% include ./../partials/footer %>
        <% include ./partial %>
		<script src="/javascripts/scripts/feedstock/report.js"></script>
        <script>
        	//fill date inputs
        	lib.fillDateInput(document.getElementById("feedstock-purchase-filter-form").elements.namedItem('feedstock_purchase_periodStart'));
        	lib.fillDateInput(document.getElementById("feedstock-purchase-filter-form").elements.namedItem('feedstock_purchase_periodEnd'));
        </script>
	</footer>
</html>