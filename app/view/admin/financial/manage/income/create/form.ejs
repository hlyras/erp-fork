<form id="income-create-form" class="box b1 container ground border-st radius-5 padding-5 margin-top-5">
  <div class="box b1 underline lucida-grande em11 bold center">Nova entrada</div>
  <input type="hidden" name="id" value="">
  <div class="box b1 container margin-top-5">
    <div class="box b1 em08 lucida-grande bold">Data de recebimento</div>
    <input type="date" name="date" class="box b1 border-st padding-9 center">
  </div>
  <div class="box b3 container margin-top-5">
    <div class="box b1 em08 lucida-grande bold">Categoria</div>
    <select name="category_id" class="box b1 border-st padding-9 center">
      <option value="">Categoria</option>
      <% for(i in incomeCategories){ %>
      <option value="<%= incomeCategories[i].id %>"><%= incomeCategories[i].name %></option>
      <% } %>
    </select>
  </div>
  <div class="box b3 container margin-top-5">
    <div class="box b1 em08 lucida-grande bold">Origem</div>
    <select name="origin_id" class="box b1 border-st padding-9 hide-disabled center">
      <option value="">Origem</option>
    </select>
  </div>
  <div class="box b3 container margin-top-5">
    <div class="box b1 em08 lucida-grande bold">Valor do recebimento</div>
    <input type="number" name="value" class="box b1 border-st padding-10 center bold" step="0.01" value="0.00"
      onfocus="if(this.value < 0.01){this.value=''}"
      onblur="if(this.value < 0.01){this.value=parseFloat(0).toFixed(2)} else {this.value = parseFloat(this.value).toFixed(2)}" />
  </div>
  <div class="box b1 container margin-top-5">
    <div class="box b1 em08 lucida-grande bold">Descrição da entrada</div>
    <textarea name="description" class="box b1 height-80 avant-garde padding-10" placeholder="Descrição"></textarea>
  </div>
  <input type="submit" name="submit"
    class="box b1 submit-generic lucida-grande em11 bold noborder radius-5 margin-top-5 center pointer"
    value="Cadastrar">
</form>