<script>
  document.getElementById("user-create-form").addEventListener("submit", async e => {
    e.preventDefault();

    let user = {
      id: lib.sanitize(e.target.id.value) || null,
      name: lib.sanitize(e.target.name.value) || null,
      username: lib.sanitize(e.target.username.value) || null,
      password: lib.sanitize(e.target.password.value) || null,
      access: lib.sanitize(e.target.access.value) || null,
      pass: lib.sanitize(e.target.pass.value) || null
    };

    let response = await API.response(User.create, user);
    if (!response) { return false; }

    lib.message(`${user.name} cadastrado(a) com sucesso!`);
  });
</script>