<form id="goal-filter-form" class="box b2-3 container border padding-5 margin-top-5">
  <input type="date" name="period_start" class="box b3 lucida-grande em11 border-st padding-9 margin-top-5 center">
  <input type="date" name="period_end" class="box b3 lucida-grande em11 border-st padding-9 margin-top-5 center">

  <select name="department_id" class="box b3 lucida-grande em11 border-st padding-9 margin-top-5 center hide-disabled">
    <option value="">Departamento</option>
    <% for(let i in departments) { %>
    <option value="<%= departments[i].id %>"><%= departments[i].name %></option>
    <% } %>
  </select>

  <select name="category" class="box b3 lucida-grande em11 border-st padding-9 margin-top-5 center hide-disabled">
    <option value="">Categoria</option>
    <option value="Processo">Processo</option>
    <option value="Conclusão">Conclusão</option>
  </select>

  <select name="status" class="box b3 lucida-grande em11 border-st padding-9 margin-top-5 center hide-disabled">
    <option value="">Status</option>
    <option value="Pendente">Pendente</option>
    <option value="Em execução">Em execução</option>
    <option value="Concluído">Concluído</option>
  </select>

  <input type="submit" name="submit"
    class="box b3 btn-act lucida-grande em12 bold noborder padding-10 margin-top-5 pointer" value="Listar objetivos">
</form>