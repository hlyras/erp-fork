<script>
  document.getElementById("goal-filter-form").addEventListener("submit", async e => {
    e.preventDefault();

    let goal = {
      department_id: e.target.department_id.value,
      category: e.target.category.value,
      name: e.target.name.value,
      date: lib.dateToTimestamp(e.target.date.value)
    };

    let goals = await API.response(Goal.filter, goal, e.target.submit);
    if (!goals) { return false; }

    console.log(goals);
  });
</script>