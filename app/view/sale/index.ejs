<html>
    <head>
        <% include ./../partials/head %>
    </head>
    <body>
        <% include ./../partials/header %>
        <% include ./../partials/nav %>
        <section>
            <div class="container">
                <input type="text" id="sale-id" value="" hidden>
                <div class="box one ground container margin-top-10">
                    <div class="box two-thirds ground center padding-10 margin-top-15">
                        <h5 class="underline">Buscar Cliente</h5>
                        <div class="box one container dropdown ground margin-top-5">
                            <ul class="box one container">
                                <li>
                                    <input type="hidden" name="customer_id">
                                    <input type="text" id="sale-customer" data-id="" class="box one input-generic center" oninput="Customer.controller.filter.input(this)" placeholder="Nome do cliente, loja ou CNPJ" onclick="if(this.readOnly){this.value=''; this.readOnly = false;}" autocomplete="off">
                                    <ul id="sale-customer-dropdown" class="box one"></ul>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="box one container center ground padding-10 margin-top-10">
                    <div class="box two container ground center padding-10 margin-top-5">
                        <h5 class="underline">Incluir produto no carrinho</h5>
                        <form id="sale-kart-product-form" class="box one container">
                            <div class="box two-thirds container dropdown ground margin-top-5">
                                <ul class="box one container">
                                    <li>
                                        <input type="hidden" name="product_id">
                                        <input type="text" name="product" data-id="" class="box one input-generic center" oninput="Product.controller.filter.input(this)" placeholder="Descrição do produto" onclick="if(this.readOnly){this.value=''; this.readOnly = false;}" autocomplete="off">
                                        <ul id="sale-product-kart-dropdown" class="box one"></ul>
                                    </li>
                                </ul>
                            </div>
                            <input type="number" name="amount" class="box six input-generic center margin-top-5" placeholder="Qtd">
                            <button type="submit" name="submit" class="box six submit-generic center margin-top-5 pointer"><img class='img-tbl-btn' src="images/icon/increase.png"></button>
                        </form>
                        <table id="sale-kart-product-table" class="tbl-info box one center ground padding-10 margin-top-10"></table>
                    </div>
                    <div class="box two container ground center padding-10 margin-top-5">
                        <h5 class="underline">Pacote de produtos</h5>
                        <form id="sale-product-package-form" class="box one container">
                            <input type="hidden" name="id" value="">
                            <input type="text" name="name" class="box two-thirds input-generic center" value="" placeholder="Descrição do pacote" autocomplete="off">
                            <input type="number" name="income_value" class="box six input-generic center bold" step="0.01" value="0.00" onfocus="if(this.value < 0.01){this.value=''}" onblur="if(this.value < 0.01){this.value='0.00'}"/>
                            <button type="submit" name="submit" class="box six submit-generic center margin-top-5 pointer"><img class='img-tbl-btn' src="images/icon/increase.png"></button>
                        </form>
                    </div>
                </div>
                <div class="box two container ground padding-10 margin-top-10">
                        <div class="box one container ground center padding-10">
                            <div class="box two box-border padding-5">
                                <h5 class="underline">Data da venda</h5>
                                <input type="date" id="sale-date" class="box one input-explicit">
                            </div>
                            <div class="box two box-border padding-5">
                                <h5 class="underline">Previsão de envio</h5>
                                <input type="date" id="estimated-shipping-date" class="box one input-explicit">
                            </div>
                        </div>
                    </div>
                    <div class="box two ground padding-10 margin-top-10">
                        <select id="payment-method" class="box one input-explicit margin-top-5 hide-disabled">
                            <option value="" disabled selected>Forma de Pagamento</option>
                            <option value="À vista">À Vista</option>
                            <option value="30">30 dias</option>
                            <option value="60">60 dias</option>
                            <option value="90">90 dias</option>
                        </select>
                        <select id="status" class="box one input-explicit margin-top-5 hide-disabled">
                            <option value="" disabled selected>Status da venda</option>
                            <option value="Em negociação">Em negociação</option>
                            <option value="Ag. pagamento">Ag. pagamento</option>
                            <option value="Ag. envio">Ag. Envio</option>
                        </select>
                        <input type="button" id="sale-create-submit" class="box one input-confirm bold padding-15 margin-top-5" value="CONFIRMAR VENDA">
                    </div>
            </div>
        </section>
        <% include ./../partials/loader %>
    </body>
    <footer>
        <% include ./../partials/footer %>
        <% include ./partial %>
        <script src="/javascripts/scripts/product/model/main.js"></script>
        <script src="/javascripts/scripts/customer/model/main.js"></script>
        <!-- <script src="/javascripts/scripts/product/model/package.js"></script> -->

        <script src="/javascripts/scripts/sale/view/product.js"></script>
        <script src="/javascripts/scripts/sale/controller/product.js"></script>

        <script src="/javascripts/scripts/sale/view/customer.js"></script>
        <script src="/javascripts/scripts/sale/controller/customer.js"></script>

        <script src="/javascripts/scripts/sale/view/kart.js"></script>
        <script src="/javascripts/scripts/sale/controller/kart.js"></script>
    </footer>
</html>