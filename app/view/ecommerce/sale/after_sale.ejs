<html>
    <head>
        <% include ./../../partials/head %>
    </head>
    <body>
        <% include ./../../partials/header %>
        <% include ./../../partials/nav %>
        <section>
            <div class="container">
                <div class="box b2 ground padding-10 margin-top-10">
                    <div class="box b1 underline center">Cadastrar venda</div>
                    <form id="ecommerce-sale-after-sale-create-form" class="box one container">
                        <input type="hidden" name="id" value=""></input>
                        <select name="origin" class="box b3 input-generic center margin-top-5 hide-disabled">
                            <option value="" selected disabled>Plataforma da venda</option>
                            <option value="MLJC">MLJC</option>
                            <option value="MLCHRIS">MLCHRIS</option>
                            <option value="SITE">SITE</option>
                            <option value="SHOPEE">SHOPEE</option>
                            <option value="B2W">B2W</option>
                        </select>
                        <input type="text" name="code" class="box b3 input-generic ground center margin-top-5" placeholder="Código da venda" autocomplete="off">
                        <input type="date" name="date" class="box b3 input-generic margin-top-5 center">
                        <input type="text" name="customer-user" class="box b2 input-generic ground center margin-top-5" placeholder="Usuário do Cliente" autocomplete="off">
                        <input type="text" name="customer-name" class="box b2 input-generic ground center margin-top-5" placeholder="Nome do cliente" autocomplete="off">
                        <input type="text" name="customer-phone" class="box b3 input-generic ground center margin-top-5" placeholder="Telefone" autocomplete="off">
                        <select name="status" class="box b3 input-generic center margin-top-5 hide-disabled">
                            <option value="Disponível" selected>Disponível</option>
                            <option value="Indisponível">Indisponível</option>
                        </select>
                        <input type="submit" name="submit" value="Cadastrar venda" class="box b3 submit-generic margin-top-5">
                    </form>
                </div>
                <div class="box b2 container ground padding-10 margin-top-10">
                    <div class="box b1 underline center">Buscar vendas</div>
                    <form id="ecommerce-sale-after-sale-filter-form" class="box b1 container">
                        <input type="date" name="periodStart" class="box b3 input-generic margin-top-5">
                        <input type="date" name="periodEnd" class="box b3 input-generic margin-top-5">
                        <input type="text" name="code" class="box b3 input-generic ground center margin-top-5" placeholder="Código da venda" autocomplete="off">
                        <input type="text" name="customer-user" class="box b3-8 input-generic ground center margin-top-5" placeholder="Usuário do Cliente" autocomplete="off">
                        <input type="text" name="customer-name" class="box b3-8 input-generic ground center margin-top-5" placeholder="Nome do cliente" autocomplete="off">
                        <select name="status" class="box b4 input-generic center margin-top-5 hide-disabled">
                            <option value='' selected disabled>Experiência do cliente</option>
                            <option value="Disponível" selected>Disponível</option>
                            <option value="Indisponível">Indisponível</option>
                            <option value="Ag. contato">Ag. contato</option>
                            <option value='Excelente'>Excelente</option>
                            <option value='Boa'>Boa</option>
                            <option value='Normal'>Normal</option>
                            <option value='Ruim'>Ruim</option>
                            <option value='Péssima'>Péssima</option>
                            <option value='Sem contato'>Sem contato</option>
                        </select>
                        <input type="submit" name="submit" value="Buscar" class="box b1 submit-generic margin-top-5">
                    </form>
                </div>
                <div id="ecommerce-sale-after-sale-filter-box" class="box b1 container padding-10">
                    
                </div>
            </div>
        </section>
        <% include ./../../partials/loader %>
    </body>
    <footer>
        <% include ./../../partials/footer %>
        <% include ./partial %>

        <script src="/javascripts/scripts/ecommerce/sale/model/after_sale.js"></script>
        <script src="/javascripts/scripts/ecommerce/sale/view/after_sale.js"></script>
        <script src="/javascripts/scripts/ecommerce/sale/controller/after_sale.js"></script>
    </footer>
</html>